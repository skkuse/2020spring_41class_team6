<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_orange"
    tools:context=".activities.SignupActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/app_icon"
            android:src="@drawable/app_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="150px"
            android:layout_marginBottom="30px" />

        <ImageView
            android:id="@+id/app_title1"
            android:src="@drawable/app_title"
            android:layout_width="230dp"
            android:layout_height="65dp"
            android:layout_marginBottom="120px"/>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/signup_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@android:color/white">

                <TableLayout
                    android:id="@+id/table_id"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:stretchColumns="1"
                    android:shrinkColumns="0">

                    <TableRow>
                        <TextView
                            android:id="@+id/id"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Email ID"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="textEnd" />

                        <EditText
                            android:id="@+id/edit_signup_id"
                            android:layout_width="160dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:textColorHint="@android:color/darker_gray"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:hint="Enter your email ID."
                            android:inputType="text"/>
                        <Button
                            android:id="@+id/check_button"
                            android:layout_width="80dp"
                            android:layout_height="45dp"
                            android:background="#714C2F"
                            android:text="check"
                            android:textSize="16dp"
                            android:textStyle="bold"/>
                    </TableRow>

                    <TextView
                        android:id="@+id/dup_tv"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="Duplicate ID check (Incomplete)"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/table_pw"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:shrinkColumns="0"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                                android:id="@+id/pw"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="Password"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textAlignment="textEnd" />

                            <EditText
                                android:id="@+id/edit_signup_pw"
                                android:layout_width="160dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:hint="should be 6~13 characters long."
                                android:inputType="textPassword" />

                        </TableRow>

                        <TableRow>
                            <TextView
                                android:id="@+id/pw_check"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="Confirm password"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textAlignment="textEnd"/>

                            <EditText
                                android:id="@+id/edit_pw_check"
                                android:layout_width="160dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:hint="Enter the password again."
                                android:inputType="textPassword"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:id="@+id/name"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Nickname"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textAlignment="textEnd"/>

                            <EditText
                                android:id="@+id/edit_signup_name"
                                android:layout_width="160dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:textColorHint="@android:color/darker_gray"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:hint="Enter your nickname."
                                android:inputType="textPersonName" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:id="@+id/verify"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Email verification"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textAlignment="textEnd" />

                            <TextView
                                android:id="@+id/verify_tv"
                                android:layout_width="160dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:text="Please click the link in the email to verify your email address."
                                android:textColor="@android:color/darker_gray"
                                android:textSize="15dp" />
                        </TableRow>

                    </TableLayout>

                </TableLayout>

                <TableLayout
                    android:id="@+id/table_verifyButtons"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:stretchColumns="1"
                    android:shrinkColumns="0">

                    <TableRow>
                        <Button
                            android:id="@+id/send_button"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="@color/main_orange"
                            android:text="SEND EMAIL"
                            android:textSize="16dp"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/verify_button"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/sub_yellow"
                            android:text="VERIFY EMAIL"
                            android:textSize="16dp"
                            android:textStyle="bold"/>
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/survey_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/plate"/>

                    <Button
                        android:id="@+id/survey_button"
                        android:layout_width="275dp"
                        android:layout_height="45dp"
                        android:background="#D5D5D5"
                        android:text="PREFERENCE SURVEY"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Button
                    android:id="@+id/signup_enter"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/white"
                    android:text="SIGN UP"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>