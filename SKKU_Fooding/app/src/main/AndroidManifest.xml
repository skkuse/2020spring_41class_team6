<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="team6.skku_fooding">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:ignore="LockedOrientationActivity">

        <activity
            android:name=".activities.StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ReviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SurveyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomThemeWilliam" />
        <activity
            android:name=".activities.SurveyActivity_Spicy"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomThemeWilliam" />
        <activity
            android:name=".activities.SurveyActivity_Sweet"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomThemeWilliam" />
        <activity
            android:name=".activities.SurveyActivity_Salty"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomThemeWilliam" />
        <activity
            android:name=".activities.SurveyActivity_Ingredient"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomThemeWilliam" />
        <activity
            android:name=".activities.SurveyActivity_Vegetarian"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomThemeWilliam" />
        <activity
            android:name=".activities.SurveyActivity_Allergen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomThemeWilliam" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>